            "url": {
              "raw": "{{base_url}}/transaction/history",
              "host": ["{{base_url}}"],
              "path": ["transaction", "history"]
            }
          }
        },
        {
          "name": "Get Transaction History with Pagination",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/transaction/history?offset=0&limit=3",
              "host": ["{{base_url}}"],
              "path": ["transaction", "history"],
              "query": [
                {
                  "key": "offset",
                  "value": "0"
                },
                {
                  "key": "limit",
                  "value": "3"
                }
              ]
            }
          }
        }
      ]
    },
